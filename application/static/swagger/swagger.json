{
  "swagger": "2.0",
  "info": {
    "description": "A RESTful web service for managing payments via the Worldpay processing platform.",
    "version": "v1",
    "title": "Payment Gateway"
  },
  "basePath": "/payment-gateway/api/v1",
  "tags": [
    {
      "name": "payments",
      "description": "Operations for managing payments via the WorldPay platform."
    },
    {
      "name": "configuration",
      "description": "Operations available for configuring settings used by this API."
    }
  ],
  "paths": {
    "/payments/card/": {
      "post": {
        "tags": [
          "payments"
        ],
        "summary": "Requests a card payment be taken",
        "operationId": "createCardPayment",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "CardPaymentRequest",
            "description": "Card payment request",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CardPaymentRequest"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Payment successfully taken",
            "schema": {
              "$ref": "#/definitions/CardPaymentResponse"
            }
          },
          "400": {
            "description": "Error Bad Request",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "500": {
            "description": "Internal Server error",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/payments/paypal/": {
      "post": {
        "tags": [
          "payments"
        ],
        "summary": "Requests a payment be made via PayPal",
        "operationId": "createPaypalPayment",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "PaypalPaymentRequest",
            "description": "Paypal payment request",
            "required": true,
            "schema": {
              "$ref": "#/definitions/PaypalPaymentRequest"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Paypal payment response",
            "schema": {
              "$ref": "#/definitions/PaypalPaymentResponse"
            }
          },
          "400": {
            "description": "Error Bad Request",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/payments/{order-code}": {
      "get": {
        "tags": [
          "payments"
        ],
        "summary": "Returns a payment by the given order code",
        "operationId": "getPayment",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "order-code",
            "description": "Unique identifier that has been generated for the payment",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Payment details",
            "schema": {
              "$ref": "#/definitions/GetPaymentResponse"
            }
          },
          "400": {
            "description": "Error Bad Request",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "404": {
            "description": "Payment not found",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/payments/api-key/": {
      "put": {
        "tags": [
          "configuration"
        ],
        "summary": "Sets the (payment provider issued) API key used by this service",
        "operationId": "apiKey",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "UpdateApiKeyRequest",
            "description": "Payment provider API key",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UpdateApiKeyRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "API Key updated",
            "schema": {
              "$ref": "#/definitions/UpdateApiKeyResponse"
            }
          },
          "400": {
            "description": "Serializer Error - Bad request"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "definitions": {
    "CardPaymentRequest": {
      "type": "object",
      "required": [
        "cardHolderName",
        "cardNumber",
        "cvc",
        "expiryMonth",
        "expiryYear",
        "currencyCode",
        "customerOrderCode",
        "orderDescription"
      ],
      "properties": {
        "amount": {
          "type": "integer",
          "example": 50000
        },
        "cardHolderName": {
          "type": "string",
          "example": "Mr Example Cardholder"
        },
        "cardNumber": {
          "type": "string",
          "example": 5454545454545454
        },
        "cvc": {
          "type": "string",
          "example": 352
        },
        "expiryMonth": {
          "type": "integer",
          "example": 6
        },
        "expiryYear": {
          "type": "integer",
          "example": 2018
        },
        "currencyCode": {
          "type": "string",
          "example": "GBP"
        },
        "customerOrderCode": {
          "type": "string",
          "example": "5d601dc2-d0c6-494f-8690-cc727be9bcda"
        },
        "orderDescription": {
          "type": "string",
          "example": "Childminder Registration Fee"
        }
      }
    },
    "CardPaymentResponse": {
      "type": "object",
      "properties": {
        "customerOrderCode": {
          "type": "string",
          "example": "5d601dc2-d0c6-494f-8690-cc727be9bcda"
        }
      }
    },
    "PaypalPaymentRequest": {
      "type": "object",
      "required": [
        "shopperCountryCode",
        "amount",
        "currencyCode",
        "customerOrderCode",
        "orderDescription",
        "successUrl",
        "pendingUrl",
        "failureUrl",
        "cancellationUrl"
      ],
      "properties": {
        "shopperCountryCode": {
          "type": "string",
          "example": "GB"
        },
        "amount": {
          "type": "integer",
          "example": 50000
        },
        "currencyCode": {
          "type": "string",
          "example": "GBP"
        },
        "customerOrderCode": {
          "type": "string",
          "example": "OFS-MORE-162738"
        },
        "orderDescription": {
          "type": "string",
          "example": "Childminder Registration Fee"
        },
        "successUrl": {
          "type": "string",
          "example": "https://ofsted.gov.uk/payment-success"
        },
        "failureUrl": {
          "type": "string",
          "example": "https://ofsted.gov.uk/payment-failed"
        },
        "cancellationUrl": {
          "type": "string",
          "example": "https://ofsted.gov.uk/payment-cancel"
        }
      }
    },
    "PaypalPaymentResponse": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "string",
          "example": 50000
        },
        "customerOrderCode": {
          "type": "string",
          "example": "5d601dc2-d0c6-494f-8690-cc727be9bcda"
        },
        "orderCode": {
          "type": "string",
          "example": "a4c34c3c-cf1c-4404-a8fe-8b2d09b18e35"
        },
        "orderDescription": {
          "type": "string",
          "example": "Order description"
        },
        "currencyCode": {
          "type": "string",
          "example": "GBP"
        },
        "redirectUrl": {
          "type": "string",
          "example": "https://online.worldpay.com/simulators/apm/?orderCode=a4c34c3c-cf1c-4404-a8fe-8b2d09b18e35&merchantId=389880a0-84e6-4ab7-957d-d4d8d011ba42"
        }
      }
    },
    "GetPaymentResponse": {
      "type": "object",
      "properties": {
        "orderCode": {
          "type": "string",
          "example": "OFS-MORE-PAYMENT-01"
        },
        "paymentMethod": {
          "type": "string",
          "example": "VISA_CREDIT-SSL"
        },
        "creationDate": {
          "type": "string",
          "example": "2017-12-21T12:42:10"
        },
        "lastEvent": {
          "type": "string",
          "example": "CAPTURED"
        },
        "amount": {
          "type": "string",
          "example": 50000
        },
        "currencyCode": {
          "type": "string",
          "example": "GBP"
        }
      }
    },
    "UpdateApiKeyRequest": {
      "type": "object",
      "required": [
        "apiKey"
      ],
      "properties": {
        "apiKey": {
          "type": "string",
          "example": "T_S_936c0508-5fae-4cb3-a631-24320e8ba123"
        }
      }
    },
    "UpdateApiKeyResponse": {
      "type": "object",
      "required": [
        "message"
      ],
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "ErrorResponse": {
      "type": "object",
      "required": [
        "error",
        "message"
      ],
      "properties": {
        "message": {
          "type": "string"
        },
        "error": {
          "type": "string"
        }
      }
    }
  }
}