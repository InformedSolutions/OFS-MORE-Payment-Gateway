{
  "swagger": "2.0",
  "info": {
    "description": "A RESTful web service for managing payments via the Worldpay processing platform.",
    "version": "v1",
    "title": "Payment Gateway"
  },
  "basePath": "/payment-gateway/api/v1",
  "tags": [
    {
      "name": "payments",
      "description": "Operations for managing payments via the WorldPay platform."
    },
    {
      "name": "configuration",
      "description": "Operations available for configuring settings used by this API."
    }
  ],
  "paths": {
    "/payments/card/": {
      "post": {
        "tags": [
          "payments"
        ],
        "summary": "Requests a card payment be taken",
        "operationId": "createCardPayment",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "CardPaymentRequest",
            "description": "Card payment request",
            "required": true,
            "schema": {
              "$ref": "#/definitions/CardPaymentRequest"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Payment successfully taken",
            "schema": {
              "$ref": "#/definitions/CardPaymentResponse"
            }
          },
          "400": {
            "description": "Error Bad Request",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "500": {
            "description": "Internal Server error",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/payments/{payment-reference}": {
      "get": {
        "tags": [
          "payments"
        ],
        "summary": "Returns a payment by the given payment provider id",
        "operationId": "getPayment",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "payment-reference",
            "description": "Unique identifier that was issued to payment provider at the point of taking a payment",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Payment details",
            "schema": {
              "$ref": "#/definitions/GetPaymentResponse"
            }
          },
          "400": {
            "description": "Error Bad Request",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "404": {
            "description": "Payment not found",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/payments/api-key/": {
      "put": {
        "tags": [
          "configuration"
        ],
        "summary": "Sets the (payment provider issued) API key used by this service",
        "operationId": "apiKey",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "UpdateApiKeyRequest",
            "description": "Payment provider API key",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UpdateApiKeyRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "API Key updated",
            "schema": {
              "$ref": "#/definitions/UpdateApiKeyResponse"
            }
          },
          "400": {
            "description": "Serializer Error - Bad request"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },
  "definitions": {
    "CardPaymentRequest": {
      "type": "object",
      "required": [
        "cardHolderName",
        "cardNumber",
        "cvc",
        "expiryMonth",
        "expiryYear",
        "currencyCode",
        "customerOrderCode",
        "orderDescription"
      ],
      "properties": {
        "amount": {
          "type": "integer",
          "example": 50000
        },
        "cardHolderName": {
          "type": "string",
          "example": "Mr Example Cardholder"
        },
        "cardNumber": {
          "type": "string",
          "example": 5454545454545454
        },
        "cvc": {
          "type": "string",
          "example": 352
        },
        "expiryMonth": {
          "type": "integer",
          "example": 6
        },
        "expiryYear": {
          "type": "integer",
          "example": 2018
        },
        "currencyCode": {
          "type": "string",
          "example": "GBP"
        },
        "customerOrderCode": {
          "type": "string",
          "example": "MORE:CM1834728:20180524121501"
        },
        "orderDescription": {
          "type": "string",
          "example": "Childminder Registration Fee"
        }
      }
    },
    "CardPaymentResponse": {
      "type": "object",
      "properties": {
        "customerOrderCode": {
          "type": "string",
          "example": "MORE:CM1834728:20180524121501"
        },
        "lastEvent": {
          "type": "string",
          "example": "AUTHORISED"
        }
      }
    },
    "GetPaymentResponse": {
      "type": "object",
      "properties": {
        "customerOrderCode": {
          "type": "string",
          "example": "MORE:CM1834728:20180524121501"
        },
        "paymentMethod": {
          "type": "string",
          "example": "ECMC-SSL"
        },
        "creationDate": {
          "type": "string",
          "example": "2018-05-16T06:45:00"
        },
        "lastEvent": {
          "type": "string",
          "example": "AUTHORISED"
        },
        "amount": {
          "type": "string",
          "example": 50000
        },
        "currencyCode": {
          "type": "string",
          "example": "GBP"
        }
      }
    },
    "UpdateApiKeyRequest": {
      "type": "object",
      "required": [
        "apiKey"
      ],
      "properties": {
        "apiKey": {
          "type": "string",
          "example": "MERCHANT_KEY"
        }
      }
    },
    "UpdateApiKeyResponse": {
      "type": "object",
      "required": [
        "message"
      ],
      "properties": {
        "message": {
          "type": "string"
        }
      }
    },
    "ErrorResponse": {
      "type": "object",
      "required": [
        "error",
        "message"
      ],
      "properties": {
        "message": {
          "type": "string"
        },
        "error": {
          "type": "string"
        }
      }
    }
  }
}